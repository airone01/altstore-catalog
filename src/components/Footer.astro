---
export interface Props {
  showExtended?: boolean;
}

const { showExtended = false } = Astro.props;
---

<footer class="mt-16 border-t bg-background/50 backdrop-blur-sm">
  {
    showExtended ? (
      <div class="container mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <h3 class="font-semibold mb-4">Ascend</h3>
            <p class="text-sm text-muted-foreground mb-4">
              Community-maintained catalog of apps and sources for AltStore &
              AltStore PAL.
            </p>
          </div>

          <div>
            <h4 class="font-semibold mb-4">Browse</h4>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li>
                <a href="/apps" class="hover:text-foreground transition-colors">
                  All Apps
                </a>
              </li>
              <li>
                <a
                  href="/sources"
                  class="hover:text-foreground transition-colors"
                >
                  All Sources
                </a>
              </li>
              <li>
                <a
                  href="/sources/preview"
                  class="hover:text-foreground transition-colors"
                >
                  Add Custom Source
                </a>
              </li>
            </ul>
          </div>

          <div>
            <h4 class="font-semibold mb-4">Resources</h4>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li>
                <a
                  href="https://altstore.io"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-foreground transition-colors"
                >
                  AltStore Official
                </a>
              </li>
              <li>
                <a
                  href="https://faq.altstore.io"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-foreground transition-colors"
                >
                  FAQ
                </a>
              </li>
              <li>
                <a
                  href="https://github.com/rileytestut/AltStore"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-foreground transition-colors"
                >
                  GitHub
                </a>
              </li>
            </ul>
          </div>

          <div>
            <h4 class="font-semibold mb-4">Community</h4>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li>
                <a
                  href="https://discord.gg/altstore"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-foreground transition-colors"
                >
                  Discord
                </a>
              </li>
              <li>
                <a
                  href="https://reddit.com/r/AltStore"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-foreground transition-colors"
                >
                  Reddit
                </a>
              </li>
              <li>
                <a
                  href="https://twitter.com/altstoreio"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-foreground transition-colors"
                >
                  Twitter
                </a>
              </li>
            </ul>
          </div>
        </div>

        <div class="mt-8 pt-8 border-t text-center text-sm text-muted-foreground">
          <p>Made with ❤️ by the AltStore community</p>
          <p class="mt-2">
            Not affiliated with AltStore LLC, Apple Inc., or any app developers.
            Apps and sources are provided by their respective creators.
          </p>
        </div>
      </div>
    ) : (
      <div class="container mx-auto px-4 py-8">
        <div class="text-center text-sm text-muted-foreground">
          <p>Community-maintained catalog for AltStore & AltStore PAL</p>
          <p class="mt-2">
            <a href="/" class="hover:text-foreground transition-colors">
              Home
            </a>{" "}
            •
            <a
              href="/apps"
              class="hover:text-foreground transition-colors ml-1"
            >
              Apps
            </a>{" "}
            •
            <a
              href="/sources"
              class="hover:text-foreground transition-colors ml-1"
            >
              Sources
            </a>{" "}
            •
            <a
              href="/sources/preview"
              class="hover:text-foreground transition-colors ml-1"
            >
              Add Source
            </a>
          </p>
        </div>
      </div>
    )
  }
</footer>
